{
  "author": "Microsoft",
  "ava": {
    "babel": {
      "presets": []
    },
    "concurrency": 5,
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "dependencies": {
    "eslint": "^4.18.2",
    "locale-code": "^1.1.1"
  },
  "description": "webhint hint to validate Microsoft's JSLL usage.",
  "devDependencies": {
    "@hint/parser-javascript": "^1.0.1",
    "@hint/utils-tests-helpers": "^1.0.1",
    "@types/debug": "0.0.30",
    "@types/node": "^9.4.6",
    "async-retry": "^1.2.1",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-typescript": "^0.9.0",
    "express": "^4.16.2",
    "lodash.clonedeep": "^4.5.0",
    "markdownlint-cli": "^0.7.0",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "on-headers": "^1.0.1",
    "rimraf": "^2.6.2",
    "hint": "^3.4.0",
    "typescript": "^2.6.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src",
    "npm-shrinkwrap.json"
  ],
  "homepage": "https://webhint.io",
  "keywords": [
    "webhint",
    "webhint-hint",
    "jsll",
    "jsll-hint"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "name": "webhint-hint-jsll",
  "peerDependencies": {
    "hint": "^3.4.0",
    "@hint/parser-javascript": "^1.0.1"
  },
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path .eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "npm run lint && npm run build && nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "hint": "node node_modules/hint/dist/src/bin/hint.js"
  },
  "repository": "Microsoft/sonarwhal-rules-microsoft",
  "version": "2.0.0"
}
